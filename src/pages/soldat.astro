        h2,
        h1 {
          font-size: var(--blackOpsOneTextXlFontSize);
        }
      }

      img {
        height: auto;
        width: 100%;
      }
    }

    .fladskam {
      max-width: 100%;
      animation: swing 3s ease-in-out alternate, scale 3s ease-in-out alternate;
      transform-origin: center;
      margin-top: 32px;
    }

    @keyframes swing {
      0% {
        transform: rotateZ(10deg) scale(0.5);
      }
      50% {
        transform: rotateZ(-10deg) scale(1);
      }
    }
  </style>
</html>
