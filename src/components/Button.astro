<style>
  a,
  button {
    padding-inline: 32px;
    padding-block: 16px;
    color: black;

    border-radius: 2%;
    font-family: var(--blackOpsOneText6xlFontFamily);
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: fit-content;
    text-decoration: none;
  }
  a:hover {
    background-color: var(--actionPrimaryHover);
  }

  [data-variant="primary"] {
    background-color: var(--actionPrimary);

    color: black;
  }
  [data-variant="secondary"] {
    background-color: var(--actionPrimary);
    color: black;
  }
  [data-variant="tricondary"] {
    border-color: var(--actionPrimary);
    border-style: solid;
    color: white;
    background-color: transparent;

  }
