---
const {tekst} = Astro.props;
---
<article>
   <button class="yellow-button" onclick="showLoader()">{tekst}</button> 
</article>


<style>
.button {
  display: inline-block;
  background-color: yellow;
  color: #000000;
  border: none;
  padding: 16px 32px;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  border-radius: 0;
}

.loader {
  display: none;
  border: 4px solid #ffffff;
  border-top: 4px solid #000000;
  border-radius: 50%;
  width: 16px;
  height: 16px;
  animation: spin 1s linear infinite;
  margin-right: 8px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.checkout-button {
  background-color: green;
  color: #ffffff;
}

</style>

<script>
    function showLoader() {
  var button = document.querySelector('.yellow-button');
  var loader = document.createElement('span');
  loader.className = 'loader';

  button.innerHTML = '';
  button.appendChild(loader);

  setTimeout(function() {
    button.innerHTML = 'Tjek din kurv';
    button.classList.add('checkout-button');
  }, 2000);
}

</script>